<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greenshade">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/idcardpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="4dp">


            <!--Textview for displaying our Course Duration-->
            <TextView
                android:id="@+id/idname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="2dp"
                android:text="Name"
                android:textColor="@color/greenshade" />

            <!--Textview for displaying our Course Description-->
            <TextView
                android:id="@+id/idphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Phone Number"
                android:textColor="@color/greenshade" />
            <TextView
                android:id="@+id/idgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Gender"
                android:textColor="@color/greenshade" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/app_logo"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-60dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>