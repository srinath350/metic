<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acd5ad"
    tools:context=".wallet">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textpro"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="E-Wallet"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="serif-monospace"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#2e5984"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Wallet Balance"
                android:textColor="@color/greenshade"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:text="0.0"
                android:textAlignment="center"
                android:textColor="@color/greenshade"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#2e5984"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/text3"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Add money to wallet"
                android:textColor="@color/greenshade"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="15dp"
                android:maxLength="3"
                android:background="@drawable/backgroundbox"
                android:backgroundTint="@color/greenshade"
                android:gravity="center"
                android:hint="Enter amount to add to wallet"
                android:inputType="number" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addmoneybtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="170dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/backgroundbutton"
                android:text="Add Money"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardpass"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#2e5984"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/book" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="25dp"
                android:text="Passbook "
                android:textColor="@color/greenshade"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="55dp"
                android:text="check your payments from wallet"
                android:textColor="@color/greenshade"
                android:textSize="12dp"
                android:textStyle="normal" />


        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/metro"/>
    </LinearLayout>




</ScrollView>