<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addmoney"
    android:orientation="vertical"
    android:background="@color/greenshade">


    <androidx.cardview.widget.CardView
        android:id="@+id/upi"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#2e5984">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Money Using"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardBackgroundColor="#2e5984"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/phonepe"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="15dp"
            android:background="#2e5984"
            android:src="@drawable/phonnepe"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Phonepe"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:gravity="left"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/gpay"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/gpay"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="200dp"
            android:background="#2e5984"
            android:layout_marginTop="130dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Googlepay"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="150dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity=""/>

        <ImageButton
            android:id="@+id/paytm"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="200dp"
            android:background="#2e5984"
            android:src="@drawable/paytm" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Paytm"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="253dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity=""/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/metrologo"
        android:layout_marginTop="80dp"/>



</LinearLayout>